<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Noteify" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
        <item name="colorOnPrimary">#000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_variant</item>
        <item name="colorOnSecondary">@color/blue_variant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
<!--        <item name="actionBarStyle">@style/MyActionBar</item>-->

    </style>
    
    <style name="Base.Widget.AppCompat.Button" parent="Widget.Material3.Button">

        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTitleText" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextColor">@color/blue</item>
    </style>

    <style name="MyButtonStyle_Primary" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/blue</item>
        <item name="backgroundTint">@color/blue_tint</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="MyButtonStyle_Secondary" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#535353</item>
        <item name="backgroundTint">@color/grey_tint</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="MyButtonStyle_FavoriteButtonColour" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">#535353</item>
        <item name="backgroundTint">#F964FD</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

</resources>